# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# For Render.com Deployment
# ============================================

# Server Configuration
PORT=10000
APP_ENV=production

# MongoDB Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=swordhub

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRE=86400

# Frontend Configuration (Update after deploying frontend)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Cloudinary Configuration (REQUIRED for production)
USE_CLOUDINARY=true
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
CLOUDINARY_FOLDER=swordhub/products

# Security
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# INSTRUCTIONS:
# ============================================
# 1. Sign up for Cloudinary: https://cloudinary.com
# 2. Get your credentials from Cloudinary Dashboard
# 3. Add these variables to Render.com Environment section
# 4. Set USE_CLOUDINARY=true for production
# 5. Update FRONTEND_URL after deploying frontend to Vercel
# ============================================
